---
var date = new Date();
var current_date =
	date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate();
var current_time =
	date.getHours() + ':' + date.getMinutes() + ':' + date.getSeconds();
var date_time = current_date + ' ' + current_time;
---

<footer class="footer footer-center block mb-5 pt-10">
	<div class="pb-2">
		{date_time}
	</div>
</footer>
